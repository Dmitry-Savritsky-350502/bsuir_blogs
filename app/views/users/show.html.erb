<%= csrf_meta_tags %>
<% provide(:title, @user.name) %>
<nav class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
        <div class="navbar-header page-scroll">
            <%= link_to "BSUIR Connect", root_path, class: "navbar-brand page-scroll" , id: "brand"%> 
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Моя страница", root_path %></li>
            <li><%= link_to "Пользователи", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Аккаунт <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
                <li class="nav-divider"></li>
                <li><%= link_to "Выход", signout_path, method: "delete" %></li>
              </ul> 
            </li> 
        </ul>
    </div>
  </div>
</nav> 

<div role="main">
        <div class="row">
            <p class="no-bradcrumbs"/></p>
            <%= render 'follow_form' if signed_in? %>
            <section class="span4" style="margin-top: 90px; width: 380px;">
                <article class="element-box">
                    <header class="element-top-bar clearfix" style="background-image:none;">
                        <a href="" class="user-info fl" ><%= @user.name %></a>
                    </header>
                    <figure>
                            <img src="<%= @user.avatar.url(:medium) %>" alt="image" style="width:380px;">
                    </figure>
                    
                    <div class="element-profile-line">
                    <table>
                        <tr>
                            <th> <a>Группа:</a> </th>
                            <th> <a><%= @user.group %></a> </th>
                        </tr>
                        <tr>
                            <th> <a>Факультет:</a> </th>
                            <th> <a>ФКСиС</a> </th>
                        </tr>
                        <tr>
                            <th> <a>Специальность:</a> </th>
                            <th> <a>ВМСиС</a> </th>
                        </tr>
                    </table>
                    
                    </div>
                </article> 
            </section> 

            <section class="span4" style="width: 750px; margin-left: 420px; margin-top: -608px;">
            
                <article class="element-box" style="min-height: 210px;" >

                    <header class="element-top-bar clearfix" style="background-image:none;">
                        <a href="" class="user-info fl">Сообщений (<%= @user.microposts.count %>)</a>
                    </header>

                    <% if @user.microposts.any? %>
                        <ol class="microposts" style="color: white;">
                            <%= render @microposts %>
                        </ol>
                        <%= will_paginate @microposts %>
                    <% end %>
                    

                </article> 
            </section>  
        </div> 
    </div> 
</div> 
