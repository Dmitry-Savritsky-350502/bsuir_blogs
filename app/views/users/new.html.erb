<% provide(:title, 'Sign up') %>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header page-scroll">
      <%= link_to "BSUIR Connect", root_path, class: "navbar-brand page-scroll" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Войти", signin_path %></li>
      </ul>
    </div>
  </div>
</nav>
<h1 class="title">Регистрация</h1>
<div class="row">
  <div class="span6 offset3">
    <div class="content">
    <div class="form-wrapper">
      <div class="linker"> 
        <span class="ring"></span>
        <span class="ring"></span>
        <span class="ring"></span>
        <span class="ring"></span>
        <span class="ring"></span>
      </div>
      <%= form_for(@user) do |f| %>
      <%= f.text_field :name, placeholder: "Имя"%>
      <%= f.text_field :email, placeholder: "Email" %>
      <%= f.password_field :password,  placeholder: "Пароль" %>
      <%= f.password_field :password_confirmation,  placeholder: "Подтверждение пароля" %>
      <!-- <%= f.file_field :avatar %> -->
      <p><%= f.button "Создать" %></p>
      <%= render 'shared/error_messages', object: f.object %>
      <% end %>
    </div>
    </div>
  </div>
</div>

